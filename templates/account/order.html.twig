{% extends 'base.html.twig' %}

{% block title %}Mes réservations - Travel With Your Bike{% endblock %}

{% block content %}

    <h1>Mes réservations</h1>

    <p>
        Bienvenue {{ app.user.firstname }} dans votre compte, gestion des réservations
        <br>
        C'est dans cet espace que vous allez pouvoir gérer toutes vos réservations.
        <a href="{{ path('account') }}">Retour</a>

    </p>
    {% if orders|length == 0  %}
        <hr>
        <p>Vous n'avez pas encore passé de réservation dans votre compte client. </p>
    {% else %}
        <table class="table mt-4">
            <thead>
            <tr>
                <th scope="col">Passée le</th>
                <th scope="col">Référence</th>
                <th scope="col">Prix</th>
                <th scope="col">Details</th>

            </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>

                        <td><span class="badge badge-secondary">{{ order.createdAt|date('d/m/Y') }}</span></td>
                        <td>{{ order.reference }}</td>
                        <td>299.90 €</td>
                        <td>
                            <a href="{{ path('account_order_show', {'reference' : order.reference}) }}" class="text-right">Voir</a>
                        </td>
                        <td>

                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    {% endif %}

{% endblock %}

