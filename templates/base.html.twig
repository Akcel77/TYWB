<!doctype html>
<html lang="fr">
<head>

    <!-- META -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Nous sommes une petite société de transport de personnes et motos. Nous vous proposons un transport sécurisé de nuit pour vous et votre moto sur plusieurs grandes
                destinations de France au départ de Calais (Marseille, Grenoble et Cahors)." />
    <link rel="canonical" href="https://www.travelwithyourbike.com/" />
    <meta name="Language" CONTENT="fr" />
    <meta name="publisher" content="Diagne Axel" />
    <meta name="keywords" content="Transport moto, Calais à Marseille, Calais à Grenoble, Calais à Cahors, voyage moto, moto, remorquage moto, moto Corse, moto Marseille, travel with your bike, moto Grenoble, transporter moto, Roues, scooter, transporteur, toute securité, En toute sécurité, Motards, Assurance tout risques, " />
    <!-- OG -->

    <meta property="og:title" content="Nous sommes une petite société de transport de personnes et motos. Nous vous proposons un transport sécurisé de nuit pour vous et votre moto sur plusieurs grandes
                destinations de France au départ de Calais (Marseille, Grenoble et Cahors)." />
    <meta property="og:url" content="https://www.travelwithyourbike.com/" />
    <meta property="og:image" content="{{  asset('assets/img/logo.png') }}" />
    <meta property="og:site_name" content="Travel With Your Bike" />



    <title>{% block title %} TravelWithYourBike{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Favicons -->
    <link rel="icon" href="{{ asset('assets/img/helmet.png') }}" />

    <!-- FONT -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Dirt&display=swap" rel="stylesheet">


    <!-- Custom styles for this template -->
    <link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" style="background-color: #000!important;">
        <a class="navbar-brand rubik" href="{{ path('home') }}">Travel With Your Bike</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('rides') }}">Nos dates</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('company_description') }}">Qui sommes-nous ?</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                </li>
                {% if is_granted("ROLE_ADMIN") %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('admin') }}">(Admin)</a>
                    </li>
                {% endif %}
            </ul>
                <div class="navbar-item-custom">
                    {% if app.user %}
                        <a href="{{ path('account') }}" class="login-group">Mon compte <small>({{ app.user.firstname }})</small> </a> | <a href="{{ path('app_logout') }}" class="login-group">Deconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="login-group">Connexion</a> | <a href="{{ path('register') }}" class="login-group">Inscription</a>
                    {% endif %}
                </div>
            {% if app.user %}
                <a href="{{ path('cart') }}">
                    <img src="{{ asset('assets/img/rider.png') }}" class="cart-icon" alt="Mon panier">
                    {% if cart|length > 0 %}
                        <span class="badge badge-pill badge-danger">{{ cart|length }}</span>
                    {% endif %}
                </a>
            {% endif %}

        </div>
    </nav>
</header>

<main role="main">
    {% if block('carousel') is defined %}
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for key,header in headers  %}
                    <li data-target="#myCarousel" data-slide-to="{{ key }}" {% if key == 0 %}class="active"{% endif %}></li>
                {% endfor %}

            </ol>

                <div class="carousel-inner">
                    {% for key,header in headers  %}
                        <div class="banner-carousel carousel-item img-fluid {% if key == 0 %}active{% endif %}"
                             style="background: url('uploads/{{ header.illustration }}') no-repeat fixed center center;
                                        background-size: cover;
                                     ">

                            <div class="container">
                                {#                            <div class="carousel-caption text-center">#}
                                {#                                <h1>{{ header.title }}</h1>#}
                                {#                                <p>{{ header.content }}</p>#}
                                {#                                <p><a class="btn btn-lg btn-danger" href="{{ header.btnUrl }}" role="button">{{ header.btnTitle }}</a></p>#}
                                {#                            </div>#}
                            </div>
                        </div>
                    {% endfor %}
                </div>


            {% if headers|length > 1 %}
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            {% endif %}

        </div>
    {% endif %}


    <div class="container marketing {% if block('carousel') is not defined %} mt-5 {% endif %}">

        {% block content %}

        {% endblock %}

    </div><!-- /.container -->

    <!-- FOOTER -->
    <footer class="container text-center mt-5">
        <p class=""><a href="" onclick='window.scrollTo({top: 0, behavior: "smooth"})' ; >Revenir en haut</a></p><br>
        <p></p>
        <p>&copy; Travel With Your Bike - 2022<br> <a href="{{ path('politic') }}">Politique de confidentialité</a> - <a href="{{ path('terms') }}">Mentions légales</a> &middot; <a href="{{ path('contact') }}">Nous contacter</a></p>
    </footer>
</main>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>


{% block javascripts %}
    <script>
        AOS.init({
            duration: 800,
        });
    </script>
{% endblock %}
</body>
</html>