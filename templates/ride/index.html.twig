{% extends 'base.html.twig' %}

{% block title %}Nos dates - Travel With Your Bike{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>

        <div class="col-md-9">
            <h1>Nos dates</h1>
            <div class="row product-container">
                {% for ride in rides %}
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('ride', {'slug': ride.slug} ) }}"><img src="/uploads/{{ ride.illustration }}" alt="{{ ride.title }}" class="img-fluid"></a>
                            <h5>{{ ride.title }}</h5>
                            <span class="product-subtitle">{{ ride.subtitle }}</span>
                            <span class="product-subtitle"><strong>Départ le :</strong>  {{ ride.departureDate|format_datetime(locale='fr') }}</span>
                            <span class="product-subtitle"><strong>Arrivée le :</strong> {{ ride.arrivalDate|format_datetime(locale='fr') }}</span>
                            <span class="product-price">299,90 €</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>



{% endblock %}
